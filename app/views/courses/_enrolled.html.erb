<h1>Enrolled</h1>
<div id="Enrolled">
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Instructor</th>
      <th>Weekdays</th>
      <th>Time</th>
      <th>Room</th>
      <th>Status</th>
    </tr>
    </thead>


    <tbody>
    <% @courses.each do |course| %>

      <% @enrollments = course.enrollments %>
      <% if @enrollments.where(student_id: current_user.user_id).length > 0 %>
        <tr>
          <td><%= link_to course.course_code + ": " + course.name, course %></td>
          <td><%= course.instructor_name %></td>
          <td><%= course.weekday_one %>
            <%= course.weekday_two unless course.weekday_two.nil? %>
          </td>
          <td><%= course.start_time.strftime("%I:%M") + " - " + course.end_time.strftime("%I:%M") %></td>
          <td><%= course.room %></td>
          <td><%= course.status %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>
